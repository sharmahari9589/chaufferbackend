{
    "compilerOptions": {
      "target": "ES2016",
      "module": "CommonJS",
      "moduleResolution": "node",
      "outDir": "./build",  
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["**.ts"],
    "exclude": ["node_modules"]
  }
  